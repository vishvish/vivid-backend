  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="form-group">
    <%= form.label :displayField %>
    <%= form.text_field :displayField %>
  </div>

  <div class="form-group">
    <%= form.label :fields %>
    <%= form.text_area :fields %>
  </div>

  <div class="form-group">
    <%= form.label :segmentField %>
    <%= form.text_field :segmentField %>
  </div>

  <div class="form-group">
    <%= form.label :urlFields %>
    <%= form.text_field :urlFields %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
